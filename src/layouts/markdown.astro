---
import "../assets/app.css";
import Footer from "../components/footer.astro";

const { frontmatter } = Astro.props;
---

<html lang={frontmatter.lang}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
    <link rel="icon" type="image/x-icon" href="favicon.svg" />
    <meta name="description" content={frontmatter.description} />
    <meta name="keywords" content={frontmatter.keywords} />
    <meta name="author" content={frontmatter.author} />
    <meta property="og:title" content={frontmatter.og_title} />
    <meta property="og:description" content={frontmatter.og_description} />
    <!-- <meta property="og:image" content={frontmatter.og_image}> -->

    <style>
      html:not([data-theme]) {
        visibility: hidden;
      }
    </style>
    <script>
      (function () {
        try {
          const storedTheme = localStorage.getItem("theme");

          const theme = storedTheme == "dark" ? "dark" : "light";

          document.documentElement.setAttribute("data-theme", theme);

          const moonSvg = document.getElementById("moon-icon");
          const sunSvg = document.getElementById("sun-icon");
          const isDark = theme === "dark";

          sunSvg?.classList.toggle("swap-on", isDark);
          sunSvg?.classList.toggle("swap-off", !isDark);

          moonSvg?.classList.toggle("swap-on", !isDark);
          moonSvg?.classList.toggle("swap-off", isDark);
        } catch (e) {}
      })();
    </script>
  </head>
  <body>
    <div class="text-right p-4">
      <label class="print:hidden swap swap-rotate">
        <!-- this hidden checkbox controls the state -->
        <input id="themeToggle" type="checkbox" aria-label="Toogle theme" />

        <!-- sun icon -->
        <svg
          id="sun-icon"
          class="theme-icon swap-on h-8 w-8 lg:h-10 lg:w-10 xl:w-12 xl:h-12 fill-current transition-none"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <path
            d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"
          ></path>
        </svg>

        <!-- moon icon -->
        <svg
          id="moon-icon"
          class="theme-icon swap-on h-8 w-8 lg:h-10 lg:w-10 xl:w-12 xl:h-12 fill-current transition-none"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
        >
          <path
            d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"
          ></path>
        </svg>
      </label>
    </div>
    <main class="mx-auto px-4 pb-16 pt-2 prose lg:prose-lg xl:prose-xl">
      <slot />
    </main>
    <Footer/>
    <script src="../assets/theme-toggle.js"></script>
  </body>
</html>
